{
    "name": "e2221/nette-grid",
    "description": "Datagrid for Nette Framework",
    "type": "library",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/e2221/bootstrap-components"
        }
    ],
    "require": {
        "php": ">=7.4",
        "nette/application": "^3.0",
        "nette/component-model": "^3.0",
        "nette/forms": "^3.0",
        "nette/utils": "^3.1",
        "latte/latte": "^2.8",
        "nittro/nette-bridges": "^2.1",
        "contributte/application": "^0.4.1",
        "e2221/utils": "^0.1",
        "ext-json": "*"
    },
    "license": "MIT",
    "require-dev": {
        "e2221/bootstrap-components": "dev-master@dev",
        "phpstan/phpstan-nette": "^0.12"
    },
    "scripts": {
        "phpstan": "phpstan analyse --level 6 --configuration phpstan.neon src"
    },
    "autoload": {
        "classmap": ["src/"]
    }
}

